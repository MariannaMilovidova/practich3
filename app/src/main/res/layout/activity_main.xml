<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fon">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <TableRow>

            <TextView
                android:id="@+id/data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/fon2"
                android:text=""
                android:textAlignment="textEnd"
                android:textSize="@dimen/txtSize" />
        </TableRow>

        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="@dimen/txtSize"
                android:layout_weight="7"
                android:id="@+id/CE"
                android:onClick="onCEClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CE"
                android:textSize="@dimen/txtSize"
                android:layout_weight="7"
                android:id="@+id/C"
                android:onClick="onCClick"
                android:background="@color/button"
                />


            <Button
                android:id="@+id/plusmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="@dimen/txtSize"
                android:onClick="onPlusMinClick"
                android:background="@color/button"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/seven"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/eight"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/nine"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/x"
                android:onClick="onDigitClick"
                android:background="@color/button"

                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/four"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/five"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/six"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/minus"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/one"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/two"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/three"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/plus"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/zero"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/division"
                android:onClick="onDigitClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/point"
                android:onClick="onZClick"
                android:background="@color/button"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="@dimen/txtSize"
                android:layout_weight="1"
                android:id="@+id/ravno"
                android:onClick="onEqClick"
                android:background="@color/button"
                />

        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>